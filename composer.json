{
	"require": {
		"php": ">=5.4.0",
        "ua-parser/uap-php": "3.9.2"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude external --exclude vendor --exclude node_modules",
			"npm install && npm test"
		]
	},
	"replace": {
		"symfony/polyfill-ctype": "1.99",
		"symfony/polyfill-mbstring": "1.99"
	},
	"config": {
		"platform": {
			"php": "5.4"
		}
	}
}
